{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "external_object_payload": {
      "type": "object",
      "properties": {
        "data": {
          "type": "string",
          "description": "Base64 encoded data of the asset"
        },
        "mime_type": {
          "type": "string",
          "description": "MIME type of the asset"
        }
      },
      "required": ["data", "mime_type"]
    },
    "slot": {
      "type": "string",
      "description": "Device slot identifier"
    }
  }
} 