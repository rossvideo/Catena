{
    "C_Cpp.default.cppStandard": "c++20",
    "cmake.sourceDirectory": "${workspaceFolder}/sdks/cpp",
    "cmake.buildDirectory": "${workspaceFolder}/sdks/cpp/build",
    "cmake.buildBeforeRun": false,
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/sdks/cpp/build"
    ],
    "json.schemas": [
        {
            "fileMatch": [
                "/example_device_models/device.*.json",
                "/nab_2024/device.*.json"
            ],
            "url": "./schema/catena.schema.json"
        }
    ],
    "git.ignoreLimitWarning": true,
    "files.associations": {
        "*.tcc": "cpp",
        "map": "cpp",
        "system_error": "cpp"
    }
}