        "EMPTY",
        "INT32",
        "FLOAT32",
        "STRING",
        "STRUCT",
        "STRUCT_VARIANT",
        "INT32_ARRAY",
        "FLOAT32_ARRAY",
        "STRING_ARRAY",
        "BINARY",
        "STRUCT_ARRAY",
        "STRUCT_VARIANT_ARRAY",
        "DATA"
